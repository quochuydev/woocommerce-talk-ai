rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload files to their own session folders
    match /uploads/{sessionId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == sessionId;
    }
    
    // Allow public read access for shared files (like product images)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin access to all files
    match /{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}